<% if @book.errors %>
   <ul>
<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>
      
<div class= "col-xs-3">
  <h2>User Info</h2>

  <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to"", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>

  <%= form_for(@book, url: books_path)  do |f| %>
  <h2>New book</h2>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book',class: "col-xs-12 btn btn-success" %>
  <% end %>
</div>

<div class= "col-xs-8 offset-md-1">
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <tr>
    <th>Title</th>
    <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
      <td><%= link_to user_path(book.user_id) do %>
      <%= attachment_image_tag book.user, :image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
      <% end %>

      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%=link_to book.body %></td>
      </tr>
      <% end %>
  </table>
</div>