<div class="container">
  <div class="row">
<div class= "col-md-3">
<% if @book.errors %>
    <ul>
<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
   </ul>
      <% end %>
 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <h2>User Info</h2>

  <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to"", "/users/1/edit", :class => "btn btn-outline-secondary btn-block fas fa-user-cog" %>

  <%= form_for(@book) do |f| %>
  <h2 class="mt-3">New book</h2>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book',class: "col-xs-12 btn btn-success" %>
  <% end %>
</div>
</div>

 <div class= "col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class='table table-hover table-inverse'>
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :image %>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>



    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>
    </tr>
    </table>
  </div>
</div>
</div>