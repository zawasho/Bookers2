  <div class="container">
  <div class="row">
  <div class= "col-md-3">
  <h2>User Info</h2>

  <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to"", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>

  <%= form_for(@book) do |f| %>
  <h2 class="mt-3">New book</h2>
  <h5>Title</h5>
  <%= f.text_field :title,class: "col-xs-12" %>
  <h5>Opinion</h5>
  <%= f.text_field :body,class: "col-xs-12" %>
  <%= f.submit 'Create Book',class: "col-xs-12 btn btn-success" %>
  <% end %>
  </div>

  <div class= "col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>

    <% @books.each do |book| %>
  <%= link_to user_path(@user.id) do %>
   <tr>
   <td><%= attachment_image_tag book.user, :image %></td>
   <% end %>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
  </table>
  </div>
  </div>
  </div>